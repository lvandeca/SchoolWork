swap:
    mrmovq (%rdi), %r8                  # long t0 = *xp;
    mrmovq (%rsi), %r9                  # long t1 = *yp;
    rmmovq %r8, (%rsi)                  # *xp = t1
    rmmovq %r9, (%rdi)                  # *yp = t0;
    ret

# Stack starts here and grows to lower addresses
    .pos 0x200
stack:
