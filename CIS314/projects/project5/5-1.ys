# Execution begins at address 0 
    .pos 0
    irmovq stack, %rsp      # Set up stack pointer
    call main       # Execute main program
    halt            # Terminate program 

# Array of 10 elements to test bubble sort algorithm
    .align 8
array:  
    .quad 0x000000000005
    .quad 0x000000000002
    .quad 0x000000000001
    .quad 0x00000000000a
    .quad 0x000000000003
    
    .quad 0x000000000004
    .quad 0x000000000007
    .quad 0x000000000009
    .quad 0x000000000008
    .quad 0x000000000006

main: 
    irmovq array, %rdi
    irmovq $10, %rsi
    call bubblesort         # bubblesort(array, 10)
    ret
 
# array in %rdi and len in %rsi   
